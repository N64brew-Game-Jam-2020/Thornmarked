load("@rules_cc//cc:defs.bzl", "cc_binary")
load("//base:copts.bzl", "COPTS")

alias(
    name = "game",
    actual = ":Thornmarked",
)

cc_binary(
    name = "Thornmarked.elf",
    srcs = [
        "console.c",
        "console.h",
        "defs.h",
        "fatal.c",
        "main.c",
        "scheduler.c",
        "scheduler.h",
        "stack.s",
        "text.c",
    ],
    copts = COPTS,
    defines = ["F3DEX_GBI_2"],
    deps = [
        "//assets",
        "//assets/fonts/terminus:ter-u12n",
        "//base",
        "//base:random",
        "//n64:libultra",
        "@n64sdk//:gspF3DEX2.xbus",
        "@n64sdk//:rspboot",
    ],
)

genrule(
    name = "Thornmarked",
    srcs = [
        ":Thornmarked.elf",
        "//assets:assets.dat",
    ],
    outs = ["Thornmarked.n64"],
    cmd = ("mips32-elf-objcopy -O binary $(location :Thornmarked.elf) $@; " +
           "cat $(location //assets:assets.dat) >>$@; " +
           "makemask $@"),
)
